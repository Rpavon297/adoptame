<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adoptame</title>
    <!-- Siempre que creeis una nueva plantilla ejs, importar las hojas de estilos CSS, en especial la de bootstrap-->
    <link rel="stylesheet" href="/css/general.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</head>

<body>
    <%- include('./Header'); %>
    <div class="content main-section">
        <!-- -->
        <div class="container">
            <div class="row">
                <div class="page-header">
                    <div class="col-md-12">
                        <h2>Solicitud de Protectoras</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 table-admin">
                    <table class="table table-striped text-center admin-control">
                        <thead>
                          <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Email</th>
                            <th scope="col">Direcci√≥n</th>
                            <th scope="col">Web</th>
                            <th scope="col">Detalles</th>
                            <th scope="col">Acciones</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% protectoras.map( protectora => { %>
                           <tr>
                             <th scope="row"><%= protectora.shelterName %></th>
                             <td><a href="<%= protectora.userEmail %>"><%= protectora.userEmail %></a></td>
                             <td><%= protectora.shelterAddress %></td>
                             <td><%= protectora.webpage %></td>
                             <td><a href="/detalleprotectora/<%= protectora.userEmail %>">ver</a></td>
                             <td><a href="/solicitudesProtectoras/aceptar/<%= protectora.userEmail %>"><button type="submit" class="btn btn-success btn-xs aceptarProtectora">Aceptar</button></a>
                              <a href="/solicitudesProtectoras/cancelar/<%= protectora.userEmail %>"><button type="submit" class="btn btn-danger btn-xs rechazarProtectora">Rechazar</button></a></td>
                           </tr>
                          <% }) %>
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('./Footer'); %>
</body>

</html>