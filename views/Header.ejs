<script>
    function expandMenu() {
        var menu = document.getElementById("menu_id");
        var login = document.getElementById("login_id");

        if (menu.className === "menu") {
            menu.className += " responsive";
        } else {
            menu.className = "menu";
        }

        if (login.className === "icon-login") {
            login.className += " responsive";
        } else {
            login.className = "icon-login";
        }
    }
</script>
